{
  "bsonType": "object",
  "required": ["article_id", "from_user_id", "to_user_id", "amount"],
  "permission": {
    "read": true,
    "create": "auth.uid != null",
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "article_id": {
      "bsonType": "string",
      "description": "文章ID"
    },
    "from_user_id": {
      "bsonType": "string",
      "description": "打赏用户ID"
    },
    "from_user_name": {
      "bsonType": "string",
      "description": "打赏用户昵称"
    },
    "from_user_avatar": {
      "bsonType": "string",
      "description": "打赏用户头像"
    },
    "to_user_id": {
      "bsonType": "string",
      "description": "被打赏用户ID（文章作者）"
    },
    "to_user_name": {
      "bsonType": "string",
      "description": "被打赏用户昵称"
    },
    "amount": {
      "bsonType": "int",
      "description": "打赏金额（分）"
    },
    "order_no": {
      "bsonType": "string",
      "description": "订单号"
    },
    "status": {
      "bsonType": "int",
      "description": "支付状态：0-待支付，1-已支付，2-已退款",
      "default": 0
    },
    "message": {
      "bsonType": "string",
      "description": "打赏留言",
      "default": ""
    },
    "pay_time": {
      "bsonType": "timestamp",
      "description": "支付时间"
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}
