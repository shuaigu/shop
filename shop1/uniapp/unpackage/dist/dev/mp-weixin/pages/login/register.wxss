
.login-container {
		padding: 60rpx;
		background-color: #ffffff;
		min-height: 100vh;
}
.back-btn {
		margin-top: 20rpx;
		padding: 20rpx 0;
}
.logo-section {
		margin-top: 60rpx;
		margin-bottom: 80rpx;
}
.app-name {
		font-size: 48rpx;
		font-weight: bold;
		color: #333;
		display: block;
}
.sub-title {
		font-size: 28rpx;
		color: #999;
		margin-top: 10rpx;
		display: block;
}
.input-group {
		height: 110rpx;
		border-bottom: 1px solid #eeeeee;
		margin-bottom: 30rpx;
		display: flex;
		align-items: center;
}
.input {
		flex: 1;
		height: 80rpx;
		font-size: 30rpx;
		color: #333;
}
.login-btn {
		width: 100%;
		height: 94rpx;
		line-height: 94rpx;
		background: linear-gradient(to right, #007AFF, #00aaff);
		color: #ffffff;
		font-size: 34rpx;
		border-radius: 47rpx;
		margin-top: 80rpx;
}
