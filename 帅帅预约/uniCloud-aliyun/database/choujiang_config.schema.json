// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["config_type"],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": "auth.uid != null",
		"delete": "auth.uid != null"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"config_type": {
			"bsonType": "string",
			"description": "配置类型",
			"enum": ["probability", "prizes", "settings"],
			"defaultValue": "probability",
			"title": "配置类型"
		},
		"config": {
			"bsonType": "object",
			"description": "配置内容",
			"properties": {
				"empty": {
					"bsonType": "number",
					"description": "谢谢参与概率",
					"title": "谢谢参与概率"
				},
				"small": {
					"bsonType": "number",
					"description": "小额奖品概率",
					"title": "小额奖品概率"
				},
				"medium": {
					"bsonType": "number",
					"description": "中额奖品概率",
					"title": "中额奖品概率"
				},
				"large": {
					"bsonType": "number",
					"description": "大额奖品概率",
					"title": "大额奖品概率"
				}
			}
		},
		"update_time": {
			"bsonType": "timestamp",
			"description": "更新时间",
			"title": "更新时间"
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}